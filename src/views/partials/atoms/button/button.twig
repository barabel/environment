<{{ data.url ? 'a' : 'button' }}
class="button {{ typographyClass ?? "h5" }} {{ class }}"
{% if data.url %}
  href="{{ data.url }}"
  {% if "//" in data.url %}
    target="_blank"
  {% endif %}
{% endif %}
{{ attributes }}
{% if data.popup %} data-popup="{{ data.popup }}"{% endif %}>
  {% if data.title %}
    {{ data.title }}
  {% endif %}
</{{ data.url ? 'a' : 'button' }}>
